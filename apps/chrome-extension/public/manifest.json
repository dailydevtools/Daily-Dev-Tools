{
  "manifest_version": 3,
  "name": "DailyDevTools",
  "version": "1.0.1",
  "description": "Developer utilities at your fingertips. JSON formatter, CURL converter, Base64, URL encoder, JWT decoder - all offline.",
  "permissions": ["sidePanel", "storage"],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Open DailyDevTools",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    }
  }
}
